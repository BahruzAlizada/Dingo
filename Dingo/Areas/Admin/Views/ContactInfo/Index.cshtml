@model ContactInfo

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>Kontakt Əlaqələri</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Adress</th>
                        <th>Google Maps</th>
                        <th style="text-align:right">Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.EmailAddress</td>
                        <td>@Model.PhoneNumber</td>
                        <td>@Model.Address</td>
                        <td>@Model.GoogleMaps</td>
                        <td>
                            <div style="display:flex;justify-content:flex-end">
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning text-white" style="margin-right:10px">Yenilə</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="pagnation my-2">
                    <ul style="list-style:none;display:flex;justify-content:center;">

                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            <li class="page-item  @(i == ViewBag.CurrentPage ? "active" : "")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }

                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />
