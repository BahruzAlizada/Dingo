@model HomeVM 


<!-- Banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h5>@Model.Slider.SubTitle</h5>
                        <h1>@Model.Slider.Title</h1>
                        <p>@Html.Raw(Model.Slider.Description)</p>
                        <div>
                            <div>
                                <a asp-controller="Reservation" asp-action="Index" class="button button-contactForm btn_4 text-white">Rezerv et</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner part start-->

<!-- About part start-->
<section class="about_part">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-sm-4 col-lg-5 offset-lg-1">
                <div class="about_img">
                    <img src="~/img/about.png" alt="">
                </div>
            </div>
            <div class="col-sm-8 col-lg-4">
                <div class="about_text">
                    <h2>@Model.About.Title</h2>
                    <h4>@Model.About.SubTitle</h4>
                    <p>@Html.Raw(@Model.About.Description)</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About part end-->

<!--::review_part start::-->
<section class="review_part gray_bg section_padding">
    <div class="container">
        <div class="row">
            <div class="col-xl-5">
                <div class="section_tittle">
                    <h2>Bizə gələn Şərhlər</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-11">
                <div class="client_review_part owl-carousel">
                    @await Component.InvokeAsync("Testimonial")
                </div>
            </div>
        </div>
    </div>
</section>
<!--::review_part end::-->