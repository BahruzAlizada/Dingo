@model MenuVM 

<!-- food_menu start-->
<section class="food_menu gray_bg">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-12">
                <div class="section_tittle">
                    <p>Popular Menu</p>
                    <h2>Delicious Food Menu</h2>
                </div>
            </div>

       


            <div class="col-lg-12">
                <div class="nav nav-tabs food_menu_nav" id="myTab" role="tablist">
                    @foreach (Category category in Model.Categories)
                    {
                        <a class="@(category.Name == "Special" ? "active" : "")"
                           id="@($"{category.Name}-tab")" data-toggle="tab" href="#@category.Name"
                           role="tab" aria-controls="@category.Name" aria-selected="false"
                           onclick="changeCategory('@category.Name')">
                            @category.Name <img src="~/img/icon/play.svg" alt="play">
                        </a>
                    }
                </div>
            </div>

            <div class="col-lg-12">
                <div class="tab-content" id="myTabContent">
                    @foreach (Category category in Model.Categories)
                    {
                        <div class="tab-pane fade @(category.Name == "Special" ? "show active" : "") single-member"
                             id="@category.Name" role="tabpanel" aria-labelledby="@($"{category.Name}-tab")">
                            <div class="row">
                                @foreach (Product product in category.Products)
                                {
                                    <div class="col-sm-6 col-lg-6">
                                        <div class="single_food_item media">
                                            <img src="~/img/products/@product.Image" class="mr-3" alt="...">
                                            <div class="media-body align-self-center">
                                                <h3>@product.Name</h3>
                                                <h5>@product.Price Azn</h5>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>



        </div>
    </div>
</section>
<!-- food_menu part end-->

@section Scripts{

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI/t1pFAc/3p8DeAq6lFZ7sM0gk5JK6fcEXY+A5A="
            crossorigin="anonymous"></script>

    <script>
        function changeCategory(categoryName) {
            // 1. Aktiv kateqoriyaları təmizlə
            $('.nav-tabs a').removeClass('active');
            // 2. Seçilmiş kateqoriyaya aktiv tətbiq et
            $(`#${categoryName}-tab`).addClass('active');

            // 3. Bütün məhsulları gizlə
            $('.tab-pane').removeClass('show active');
            // 4. Seçilmiş kateqoriyanın məhsullarını göstər
            $(`#${categoryName}`).addClass('show active');
        }
    </script>

}